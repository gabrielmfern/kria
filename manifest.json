{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "kria",
  "author": "Gabriel Miranda",
  "version": "1.0",
  "description": "reading helper",
  "icons": {
    "128": "assets/kria.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5591434b-4bef-4aa7-9522-8f447b2840a3}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "dist/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "dist/index.js",
        "dist/index.css",
        "assets/kria.png",
        "assets/kria.svg",
        "AA.json"
      ]
    }
  ]
}
